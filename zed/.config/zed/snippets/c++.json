{
    "CanonicalFormatClass": {
        "description": "Canonical Format Class",
        "prefix": "cfc",
        "body": [
            "#ifndef ${1:CLASSNAME}_HPP",
            "#define ${1:CLASSNAME}_HPP",
            "",
            "class ${2:ClassName}",
            "{",
            "  private:",
            "    void copy(const ${2:ClassName}& other);",
            "",
            "  public:",
            "    ${2:ClassName}();",
            "    ${2:ClassName}(const ${2:ClassName}& other);",
            "    ~${2:ClassName}();",
            "    ${2:ClassName}& operator=(const ${2:ClassName}& other);",
            "};",
            "",
            "#endif"
        ]
    },
    "Debug print": {
        "description": "Debug print",
        "prefix": "dbg",
        "body": [
            "#"
        ]
    }
}

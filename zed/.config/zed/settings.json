{
	"assistant": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-4o"
		},
		"version": "2"
	},
	"vim_mode": true,
	"vim": {
		"toggle_relative_line_numbers": true,
		"use_system_clipboard": "always"
	},
	"vertical_scroll_margin": 10,
	"hard_tabs": true,
	"tab_size": 4,
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"buffer_font_family": "Cascadia Code",
	// "buffer_font_family": "MonaspiceNe Nerd Font",
	"buffer_line_height": {
		"custom": 1.5
	},
	"relative_line_numbers": true,
	"project_panel": {
		"dock": "right",
		"auto_fold_dirs": false
	},
	"theme": {
		"mode": "dark",
		"light": "One Light",
		"dark": "One Dark Pro"
	},
	"indent_guides": {
		"coloring": "indent_aware"
	},
	"terminal": {
		"dock": null
	},
	"languages": {
		"C": {
			"show_wrap_guides": true,
			"wrap_guides": [80],
			"formatter": {
				"external": {
					"command": "c_formatter_42"
				}
			}
		},
		"C++": {
			"show_wrap_guides": true,
			"wrap_guides": [80],
			"formatter": {
				"external": {
					"command": "c_formatter_42"
				}
			}
		}
	}
}

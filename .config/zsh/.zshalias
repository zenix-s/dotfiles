# Replace ls with exa
# alias l='exa -al --color=always  --header --group-directories-first --icons' # preferred listing
# alias ls='exa -al --color=always --header --group-directories-first --icons' # preferred listing
function l() {
  if [ -z "$1" ]; then
    if command -v exa &> /dev/null; then
      exa -al --color=always  --header --group-directories-first --icons
    else
      ls -al --color=always
    fi
  else
    if command -v exa &> /dev/null; then
      exa -al --color=always  --header --group-directories-first --icons $1
    else
      ls -al --color=always $1
    fi
  fi
}


